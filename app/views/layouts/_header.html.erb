<header class="navbar navbar-static-top navbar-inverse">
  <div class="container">
    <%= link_to "Shopping page", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Products", products_index_url %></li>
        <li><h4 class="cart-text"><%= render 'layouts/cart_text' %></h4></li>

        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>

        <% if current_user.admin? && !current_user?(@user)  %>
          <li><%= link_to "All Users", users_path %></li>
        <% end %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Your Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Your Profile", current_user %></li>
              <li><%= link_to "Edit your profile", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
